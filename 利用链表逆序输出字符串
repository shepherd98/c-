#include<iostream.h>

struct node
{
	char data;
	node* link1;
	node* link2;
};                //之前失误很大的原因是这里没加分号

node*create()    //创建链表的函数，同时会发现在创建node时使用*名称才会有正确的称呼形式
{
	char info;
    node *head,*p1,*p2,*foot;
	head=NULL;
	foot=new node;
	p2=new node;
	p2->link2 =head;
	while(cin>>info,info!='@')
	{ 
		p2->data =info;
		p1=new node;
		p2->link1 =p1;
		p1->link2 =p2;
		p2=p1;
	}
	p1->data =' ';
	p2->link1 =foot;
	foot->link2 =p2;
	foot->data =' ';
    return foot ;
}


void main()
{
	int length=0;
	node*k;
	cout<<"请输入任意长度的字符串,并最后输入@作为终止:";    //接下来进行字符串的输入（创建并使用链表）
    k=create();
	cout<<"输出逆序字符串:";
	for(length=0;k!=NULL;length++)
	{
		cout<<k->data;
		k=k->link2;
	}
	cout<<"\n"<<"输入字符串长度为:"<<length-2<<"\n";
}
